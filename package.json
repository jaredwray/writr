{
  "name": "writr",
  "version": "0.5.2",
  "description": "A Simple to Use Markdown Blog",
  "main": "./dist/index",
  "types": "./dist/index",
  "repository": "https://github.com/jaredwray/writr.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w -p .",
    "clean-all": "clean && rm -rf node_modules",
    "clean": "rm -rf ./dist && rm -rf ./blog_output",
    "compile": "yarn clean && tsc -p .",
    "build": "yarn test && yarn compile",
    "test": "yarn nyc mocha",
    "test-output": "yarn compile && node ./bin/writr -p ./blog_example",
    "coverage": "nyc report --reporter=json && codecov -f coverage/*.json -t 62b3983c-08a1-425f-99b9-71e84fef74bc"
  },
  "bin": {
    "writr": "./bin/writr"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "cheerio": "^1.0.0-rc.3",
    "commander": "^3.0.0",
    "del": "^5.1.0",
    "feed": "^4.0.0",
    "fs-extra": "^6.0.1",
    "gray-matter": "^4.0.2",
    "handlebars": "^4.0.11",
    "keyv": "^3.0.0",
    "markdown-it": "^8.4.1",
    "moment": "^2.24.0",
    "parse-json": "^4.0.0",
    "promisify": "^0.0.3",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/array-sort": "^1.0.0",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.3",
    "@types/handlebars": "^4.0.37",
    "@types/keyv": "^3.0.1",
    "@types/markdown-it": "^0.0.4",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.17",
    "@types/parse-json": "^4.0.0",
    "@types/winston": "^2.3.8",
    "chai": "^4.1.2",
    "codecov": "^3.5.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^3.5.3"
  },
  "files": [
    "dist",
    "bin"
  ],
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true
  }
}
