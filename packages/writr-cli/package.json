{
  "name": "writr",
  "version": "1.9.9",
  "description": "A Simple to Use Markdown Blog",
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": "https://github.com/jaredwray/writr.git",
  "author": "Jared Wray <me@jaredwray.com>",
  "license": "MIT",
  "keywords": [
    "static-site-generator",
    "static-site",
    "ssg",
    "documentation",
    "website",
    "blog",
    "templates",
    "generator",
    "framework",
    "writr",
    "writer",
    "html",
    "markdown",
    "handlebars"
  ],
  "scripts": {
    "watch": "tsc -w -p .",
    "clean-all": "npm run clean && rm -rf node_modules && rm -rf coverage && rm -rf package-lock.json && rm -rf ./test/output",
    "clean": "rm -rf ./dist && npm run clean-output",
    "clean-output": "rm -rf ./blog_output && rm -rf ./test_output",
    "compile": "npm run clean && tsc -p .",
    "build": "npm run test && npm run compile",
    "test": "npm run clean-output && NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand && npm run clean-output",
    "test-output": "npm run compile && node ./bin/writr.js -p ./blog_example"
  },
  "bin": {
    "writr": "./bin/writr.js"
  },
  "dependencies": {
    "array-sort": "^1.0.0",
    "axios": "^1.4.0",
    "browser-sync": "^2.29.3",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.0.0",
    "ecto": "^2.1.12",
    "feed": "^4.2.2",
    "fs-extra": "^11.1.1",
    "gray-matter": "^4.0.3",
    "inquirer": "^8.2.3",
    "keyv": "^4.5.2",
    "luxon": "^3.3.0",
    "moment": "^2.29.4",
    "node-html-markdown": "^1.3.0",
    "parse-json": "^7.0.0",
    "striptags": "^3.2.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "@types/array-sort": "^1.0.0",
    "@types/browser-sync": "^2.27.0",
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^9.0.1",
    "@types/jest": "^29.5.2",
    "@types/keyv": "^3.1.4",
    "@types/luxon": "^3.3.0",
    "@types/node": "^20.3.3",
    "@types/parse-json": "^4.0.0",
    "jest": "^29.5.0",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "jest-resolve": "^29.5.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "dist",
    "bin",
    "init"
  ],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.[jt]sx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testMatch": [
      "**/test/**/*.test.(ts)"
    ],
    "resolver": "jest-ts-webcompat-resolver",
    "testEnvironment": "node"
  }
}
